<% if @books.blank? %>
<p>No books saved till now</p>
<% else %>
<p>Currently available books</p>
<!-- Unordered list of books -->
<ul id = "books">
    <% @books.each do |c| %>
    <!-- Links first argument entry to action of show -->
    <li>
        <%= link_to c.title, {:action => 'show', :id => c.id}  -%>
        <b> <%= link_to 'Edit', {:action => "edit",:id => c.id} %></b>
    </li>
    <% end %>
</ul>
<% end %>

<p><%= link_to "Add new book", {:action => 'new'} %></p>
